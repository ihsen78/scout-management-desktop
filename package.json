{
  "name": "scout-management",
  "version": "1.0.0",
  "main": "electron-main.js",
  "description": "Scout Management Desktop Application",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder --win --x64"
  },
  "build": {
    "appId": "tn.scout.management",
    "productName": "Scout Management Sidi Bou Ali",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "preload.js",
      "icon.png"
    ],
    "win": {
      "icon": "icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
